<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_selected="true">
		<shape>
			<solid android:color="@color/orange_color" />
			<stroke android:width="1dip" android:color="@color/light_orange_color" />
			<corners android:radius="2dip" />

			<padding android:left="5dip" android:top="5dip"
				android:right="5dip" android:bottom="5dip" />
		</shape>

	</item>


	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/orange_color" />
			<stroke android:width="1dip" android:color="@color/light_orange_color" />
			<corners android:radius="2dip" />

			<padding android:left="5dip" android:top="5dip"
				android:right="5dip" android:bottom="5dip" />
		</shape>

	</item>
	<item android:state_pressed="false" android:state_selected="false">
		<shape>
			<solid android:color="@color/white_color" />
			<stroke android:width="1dip" android:color="@color/white_color" />
			<corners android:radius="2dip" />
			<padding android:left="5dip" android:top="5dip"
				android:right="5dip" android:bottom="5dip" />
		</shape>
	</item>
</selector>



