<Application x:Class="UMR.Saniteri.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:UMR.Saniteri.view"
             xmlns:vm="clr-namespace:UMR.Saniteri.ViewModel;assembly=UMR.Saniteri.ViewModel"
             StartupUri="Shell.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Themes\Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type vm:CanConfigViewModel}">
                <views:CanConfigView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CanLogViewModel}">
                <views:CanLogView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CanStatusCodeViewModel}">
                <views:CanStatusConfigView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CanStatusViewModel}">
                <views:CanStatusView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CanEventCodeViewModel}">
                <views:CanEventConfigView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
